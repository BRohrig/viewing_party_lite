<!DOCTYPE html>
<html>
  <head>
    <title>ViewingPartyLite</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

  <style>
  .column {
    float: left;
    width: 33.33%;
  }
  
  .row:after {
    content: "";
    display: table;
    clear: both;
  }

  .column-2 {
    float: left;
    width: 50%;
  }

  .row-2:after {
    content: "";
    display: table;
    clear: both;
  }

  .content {
    font-family: system-ui;
  }

  .sub-header {
    font-family: fantasy;
    text-align: center;
    font-size: xx-large;
  }

  hr {
    width: 100%;
    height:1px;
    background-color:black;
  }

</style>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <div class="top-container">
      <h1 style="text-align:center; font-family: fantasy; font-size: xxx-large;">Viewing Party</h1>
    </div>
    
    <% flash.each do |type, msg| %>
      <div>
        <%= msg %>
      </div>
    <% end %>
    
    <section>
      <p><%= link_to 'Home', root_path %></p>
    </section>
    <%= yield %>
  </body>
</html>
